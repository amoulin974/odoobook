<odoo>
    <record id="view_form_language" model="ir.ui.view">
        <field name="name">Language form</field>
        <field name="model">library.language</field>
        <field name="arch" type="xml">
            <form string="book">
                <sheet>
                    <field name="name"/>'
                    <field name="flag" widget="image" options='{"size": [150, 140]}'/>
                    <field name="book_ids" widget="many2many_checkboxes"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>