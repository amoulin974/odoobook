<odoo>
    <record id="view_form_book" model="ir.ui.view">
        <field name="name">Book form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="book">
                <header>
                    <button name="button_check_isbn" type="object" string="Check isbn" />
                </header>
                <sheet>
                    <group name="group_line">
                        <group name="group_column_left">
                            <field name="image" widget="image" options='{"size": [150, 140]}'/>
                        </group>
                        <group name="group_column_right">
                            <field name="name"/>
                            <field name="isbn"/>
                            <field name="active"/>
                            <field name="date_published"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">Book list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="name"/>
                <field name="isbn"/>
                <field name="date_published"/>
            </tree>
        </field>
    </record>
    <record id="view_search_book" model="ir.ui.view">
        <field name="name">Book Filter</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="isbn"/>
                <filter name="filter_sortie_recentes" string="Sorties rÃ©centes" domain="[('date_published','>',(context_today() - relativedelta(months=12)).strftime('%Y-%m-%d')) ]"/>
            </search>
        </field>
    </record>
</odoo>